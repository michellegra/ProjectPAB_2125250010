<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".Activity.UbahActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Data Jajanan"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/logo2don" />

    <EditText
        android:id="@+id/et_ubahNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/et_ubahRasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rasa"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/et_ubahRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rating"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/et_ubahHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/et_ubahDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi Singkat"
        android:textColorHint="@color/white"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/et_ubahGambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link Gambar"
        android:textColorHint="@color/white"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:inputType="text"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_Ubah"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F1D9F8"
        app:cornerRadius="20dp"
        android:layout_margin="20dp"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:text="UBAH"/>

</LinearLayout>
</ScrollView>