<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/wallpaperubah"
    tools:context=".Activity.UbahActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Data Jajanan"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logo2don" />

    <EditText
        android:id="@+id/et_ubahNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nama"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_ubahRasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Rasa"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_ubahRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Rating"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_ubahHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Harga"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_ubahDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Deskripsi Singkat"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="30dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_ubahGambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Link Gambar"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_Ubah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#C4B5C8"
        app:cornerRadius="20dp"
        android:textSize="21sp"
        android:padding="15dp"
        android:textColor="@color/black"
        android:text="UBAH"/>

</LinearLayout>
</ScrollView>