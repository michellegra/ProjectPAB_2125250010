<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_aboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="About Us"
        android:gravity="center"
        android:layout_marginTop="130dp"/>

    <ImageView
        android:id="@+id/iv_putih"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/logo2don"
        android:layout_below="@id/tv_aboutUs"/>
    <TextView
        android:id="@+id/tv_michelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Michelle Graciela"
        android:gravity="left|center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_aboutUs"
        android:layout_toEndOf="@id/iv_putih"/>
    <TextView
        android:id="@+id/tv_npm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="2125250010"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_below="@id/tv_michelle"
        android:layout_toEndOf="@id/iv_putih"/>
    <ImageView
        android:id="@+id/iv_coklat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/logo2don"
        android:layout_below="@id/iv_putih"/>
    <TextView
        android:id="@+id/tv_rikky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Rikky"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/tv_npm1"
        android:layout_toEndOf="@id/iv_coklat"/>
    <TextView
        android:id="@+id/tv_npm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="2125250067"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_below="@id/tv_rikky"
        android:layout_toEndOf="@id/iv_coklat"/>

</RelativeLayout>