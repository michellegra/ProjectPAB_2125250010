<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/wallpapertambah"
    tools:context=".Activity.TambahActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:text="Tambah Daftar Jajanan"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo2don"
        />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nama"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#E8CE8A"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_rasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#E8CE8A"
        android:drawablePadding="8dp"
        android:hint="Rasa"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FFC1BD"
        android:drawablePadding="8dp"
        android:hint="Rating"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Harga"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FFC1BD"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Deskripsi Singkat"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/et_Gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Gambar"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#B6EFAA"
        android:padding="10dp"
        android:maxLength="800"
        android:drawablePadding="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tambah"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C4B5C8"
        android:layout_margin="20dp"
        android:textSize="21sp"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        android:text="TAMBAH"/>


</LinearLayout>
</ScrollView>

